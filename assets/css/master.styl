@import '_settings'
@import jeet

base()

body
  padding 50px
  background orange 

#cubeContainer
  width cubeWidth
  height cubeWidth
  position fixed
  margin 100px 300px
  perspective 1000px

#cube
  width 100%
  height 100%
  position absolute
  transform-style preserve-3d
  transform translateZ(100px) rotateX(45deg) rotateY(45deg)
  figure
    width cubeWidth // - 1px
    height cubeWidth // - 1px
    //border 1px solid white
    display block
    position absolute
    color white
    opacity 1
    font-size 200px
    text-align center
    line-height 100%
    overflow hidden
    text-indent -2000px
    background linear-gradient(left, red, orange)
  .front 
    transform rotateY(0deg) translateZ(cubeWidth/2)
  .back
    background linear-gradient(left, greyLight, greyLight)
    transform rotateX(180deg) translateZ(cubeWidth/2)
  .right 
    //background linear-gradient(left, red, orange)
    transform rotateY(90deg) translateZ(cubeWidth/2)
  .left 
    //background linear-gradient(right, red, orange)
    transform rotateY(-90deg) translateZ(cubeWidth/2)
  .top 
    //background linear-gradient(bottom, red, orange)
    transform rotateX(90deg) translateZ(cubeWidth/2)
  .bottom 
    //background linear-gradient(top, red, orange)
    transform rotateX(-90deg) translateZ(cubeWidth/2)
