@import '_settings'
@import jeet

boxBase = 40px
boxHeight = 1050px
border = 0px

base()

body
  padding 50px
  background orange 

#cubeContainer
  width boxHeight
  height boxBase
  position fixed
  perspective 100px

#box
  width 100%
  height 100%
  position absolute
  transform translateZ(450px) rotateY(90deg)
  transform-style preserve-3d
  left 0
  top 0
  figure 
    display block
    position absolute
    border border solid black
    background orange
    overflow hidden
    text-indent -2000px
  .back
  .front
    width boxBase - border*2
    height boxBase - border*2
    left ((boxHeight - boxBase)/2)
  .right
  .left
    width boxHeight - border*2
    height boxBase - border*2
    background linear-gradient(left, orange 90%, orangeDark 100%)
  .top,
  .bottom 
    width boxHeight - border*2
    height boxBase - border*2
    background linear-gradient(left, orange 93%, orangeDark 100%)
    top 0
  .back
    transform rotateY(90deg) translateZ(boxHeight/2)
    //box-shadow 0 0 40px greyLight
    background greyLight
  .front
    transform rotateY(-90deg) translateZ(boxHeight/2)
  .right
    transform rotateY(0deg) translateZ(boxBase/2)
  .left
    transform rotateX(180deg) translateZ(boxBase/2)
  .top   
    transform rotateX(90deg) translateZ(boxBase/2)
  .bottom
    transform rotateX(-90deg) translateZ(boxBase/2)

