@import '_settings'
@import jeet

boxBase = 40px
boxHeight = 2000px
border = 1px

base()

body
  padding 50px
  background orange 

#cubeContainer
  width boxHeight
  height boxBase
  position relative
  perspective 1000px

#box
  width 100%
  height 100%
  position absolute
  transform translateZ(0) rotateY(90deg)
  transform-style preserve-3d
  left 0
  figure 
    display block
    position absolute
    border border solid black
    background orange
  /*
  /!\ front, back, right, ... aren't really what they say the are. Sorry.
  */
  .back
  .front
    width boxBase - border*2
    height boxBase - border*2
    left ((boxHeight - boxBase)/2)
  .right
  .left
    width boxHeight - border*2
    height boxBase - border*2
  .top,
  .bottom 
    width boxHeight - border*2
    height boxBase - border*2
    top 0
  .back
    transform rotateY(90deg) translateZ(boxHeight/2)
  .front
    transform rotateY(-90deg) translateZ(boxHeight/2)
  .right
    transform rotateY(0deg) translateZ(boxBase/2)
  .left
    transform rotateX(180deg) translateZ(boxBase/2)
  .top   
    transform rotateX(90deg) translateZ(boxBase/2)
  .bottom
    transform rotateX(-90deg) translateZ(boxBase/2)

